{
  "name": "events-to-async",
  "version": "1.0.0",
  "description": "Treat EventEmitter-like object using Async/Await, Async Iterator.",
  "homepage": "https://github.com/azu/events-to-async",
  "bugs": {
    "url": "https://github.com/azu/events-to-async/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/events-to-async.git"
  },
  "license": "MIT",
  "author": "azu",
  "sideEffects": false,
  "keywords": [
    "node.js",
    "events",
    "event-emitter",
    "promise",
    "async",
    "async-iterator"
  ],
  "main": "lib/events-to-async.js",
  "module": "module/events-to-async.js",
  "types": "lib/events-to-async.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "bin/",
    "lib/",
    "module/",
    "src/"
  ],
  "scripts": {
    "test": "mocha \"test/**/*.ts\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepare": "git config --local core.hooksPath .githooks",
    "build": "tsc -p . && tsc -p ./tsconfig.module.json",
    "watch": "tsc -p . --watch",
    "clean": "rimraf lib/ module/",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.6.1",
    "lint-staged": "^11.1.2",
    "mocha": "^9.0.3",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.0",
    "ts-node-test-register": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
